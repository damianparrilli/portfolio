    ([entry]) => {
      if (entry.isIntersecting) {
        overlay.style.opacity = "1";
      } else {
        overlay.style.opacity = "0";
      }
    },
    { threshold: 0.5 } // Se activa cuando el 30% del elemento es visible
  );

  observer.observe(target);
});


