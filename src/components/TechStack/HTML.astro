---
interface Props {
  class?: string;
  variant?: "project" | "skill";
}

const { class: className = "", variant = "project" } = Astro.props;

const isProject = variant === "project";
const isSkill = variant === "skill";

const baseClasses = "text-xs sm:text-sm flex items-center gap-1 rounded-2xl px-3 py-1";
const projectClasses = "text-[#f9f9f9] bg-[#E34F2620]";
const skillClasses = "text-[#272727] dark:text-[#F9F9F9] bg-[#F1662A20] hover:bg-[#F1662A50] transition-all duration-300 ease-in-out skill-variant";

const finalClasses = `${baseClasses} ${isProject ? projectClasses : skillClasses} ${className}`;
---

<span class={finalClasses}>
  <svg class="w-4 h-auto" viewBox="0 0 13 13" fill="none" xmlns="http://www.w3.org/2000/svg">
    <path d="M2.39771 11.0504L1.48486 0.8125H11.5152L10.6011 11.0488L6.49393 12.1875L2.39771 11.0504Z" fill="#E44F26"/>
    <path d="M6.5 11.3172L9.81906 10.397L10.5999 1.64966H6.5V11.3172Z" fill="#F1662A"/>
    <path d="M6.5 5.44653H4.83844L4.72388 4.16075H6.5V2.90503H3.35156L3.38163 3.24222L3.68997 6.70225H6.5V5.44653ZM6.5 8.7075L6.49431 8.70912L5.096 8.33172L5.00663 7.33031H3.74603L3.92194 9.30144L6.49431 10.0156L6.5 10.014V8.7075Z" fill="#EBEBEB"/>
    <path d="M6.49548 5.44653V6.70225H8.04167L7.89623 8.3309L6.49548 8.70872V10.0152L9.06989 9.30143L9.08858 9.08937L9.38351 5.78372L9.41439 5.44653H6.49548ZM6.49548 2.90503V4.16075H9.52855L9.55373 3.87881L9.61102 3.24222L9.64108 2.90503H6.49548Z" fill="white"/>
  </svg>
  HTML
</span>

<style>
  .skill-variant {
    font-size: 1.05rem;
    user-select: none;
  }
  
  .skill-variant svg {
    scale: 1.1;
    margin-right: 2px;
  }
  
  @media (width < 640px) {
    .skill-variant {
      font-size: 0.875rem;
    }
    
    .skill-variant svg {
      scale: 1;
      margin-right: 0;
    }
  }
</style>
