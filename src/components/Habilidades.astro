---
import ResponsiveImage from "./ResponsiveImage.astro";
import { 
  Figma, 
  AdobePhotoshop, 
  AdobeIllustrator, 
  AdobePremierePro, 
  AdobeAfterEffects,
  Wordpress,
  Divi,
  HTML,
  CSS,
  SASS,
  TailwindCSS,
  JavaScript,
  AstroComponent,
  ReactJS,
  NodeJS,
  MySQL,
  ElementorPro,
  WooCommerce
} from "./TechStack/index.ts";
---

<section id="habilidades" class="min-h-[100dvh] flex  bg-[#f3f3f3] dark:bg-[#2A2A2A]  minicontainer">
  <div
    class="max-w-[750px] mx-auto flex flex-col justify-evenly items-center gap-24 py-28  px-4 sm:px-7"  
  >
    <div
      class="flex h-max flex-col justify-center items-center gap-7 px-4 sm:px-7" data-aos="fade-down"
    data-aos-duration="500"
    >
      <h2
        class="font-bold text-[#272727] dark:text-[#F9F9F9] text-3xl sm:text-4xl" data-i18n="mySkills"
      >
        Mis habilidades
      </h2>
      <div class="flex flex-col gap-3 w-full justify-center items-center">
        <h3
          class="font-medium text-[#272727] dark:text-[#F9F9F9] text-xl sm:text-2xl" data-i18n="mySkillsDesign"
        >
          De diseño
        </h3>
        <div class="flex gap-x-2 gap-y-3 flex-wrap items-center justify-center">
          <Figma variant="skill" />
          <AdobePhotoshop variant="skill" />
          <AdobeIllustrator variant="skill" />
          <AdobePremierePro variant="skill" />
          <AdobeAfterEffects variant="skill" />
          <Wordpress variant="skill" />
          <Divi variant="skill" />
          <ElementorPro variant="skill" />
          <WooCommerce variant="skill" />
        </div>
      </div>
      <div class="flex flex-col gap-3 w-full justify-center items-center">
        <h3
          class="font-medium text-[#272727] dark:text-[#F9F9F9] text-xl sm:text-2xl" data-i18n="mySkillsDev"
        >
          De desarrollo
        </h3>
        <div class="flex gap-x-2 gap-y-3 flex-wrap items-center justify-center">
          <HTML variant="skill" />
          <CSS variant="skill" />
          <SASS variant="skill" />
          <TailwindCSS variant="skill" />
          <JavaScript variant="skill" />
          <AstroComponent variant="skill" />
          <ReactJS variant="skill" />
          <NodeJS variant="skill" />
          <MySQL variant="skill" />
        </div>
      </div>
    </div>
    <div class="flex flex-col justify-center items-center gap-7 px-4 sm:px-7" data-aos="fade-down"
    data-aos-duration="500">
      <h2
        class="font-bold text-[#272727] dark:text-[#F9F9F9] text-3xl sm:text-4xl" data-i18n="myCertificates" 
      >
        Mis certificados
